<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/foto_iniciosesion"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoiniciosesion"
        tools:layout_editor_absoluteX="0dp" />

    <FrameLayout
        android:id="@+id/texto_inicio_sesion_frase"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="@drawable/fondo_inicio_sesion"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="100dp">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:fontFamily="@font/neometric_extra_bold"
            android:gravity="center"
            android:text="\nUniSinÃº en tus manos"
            android:textColor="@color/cyan"
            android:textSize="35dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            >

            <EditText
                android:id="@+id/nombre_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Usuario"
                android:gravity="left"
                android:textColor="@color/cyan"
                android:backgroundTint="@color/cyan"
                android:textColorHint="@color/cyan"
                android:fontFamily="@font/neometric_extra_bold"
                android:textSize="20dp"


                />

            <EditText
                android:id="@+id/editTextNumberPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/cyan"
                android:ems="10"
                android:inputType="numberPassword"
                android:hint="Codigo"
                android:textColor="@color/cyan"
                android:textColorHint="@color/cyan"
                android:fontFamily="@font/neometric_extra_bold"
                android:textSize="20dp"

                />



            <Button
                android:id="@+id/boton_iniciosesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrar"
                android:fontFamily="@font/neometric_extra_bold"
                android:backgroundTint="@color/cyan"
                android:textColor="@color/black"/>



        </LinearLayout>



    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>